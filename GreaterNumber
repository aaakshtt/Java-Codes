//WAP to find greatest larger number
package com.company;
import java.util.Scanner;

public class GreaterofTwo {
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);  //Create a method of class Scanner to take input
        System.out.println("Input a");
        int a = sc.nextInt();                           //Declaring variables
        System.out.println("Input b");
        int b = sc.nextInt();
        System.out.println("Input c");
        int c = sc.nextInt();
        if (a>b && a>c){                               //Using the AND operator
            System.out.println("A is the greates");
        }
        else if (b>a && b>c){
            System.out.println("B is the greatest");
        }
        else if(c>a && c>b){
            System.out.println("C is the greatest");
        }
    }

}
