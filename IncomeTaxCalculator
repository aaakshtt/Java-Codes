       //Q3
        //Write a program which taxes individuals according to their income
        //2.5l to 5l = 5%
        //5L to 10L = 20%
        //10L above = 30%
        
        
        
         package com.company;
          import java.util.Scanner;

         public class Ch4Questions {
        public static void main(String[] args) {
      
        Scanner myobj  = new Scanner(System.in);
        System.out.println("Enter your income");
        float income = myobj.nextFloat();
        if (income>0 && income<2.5){
            System.out.println("You dont have to pay any tax");
        }
        else if (income>2.5 && income<5){
            System.out.println("Your tax will be " + income*0.05);
        }
        else if (income>5 && income<10){
            System.out.println("Your Tax will be " + income*0.2);
        }
        else if (income>10){
            System.out.println("Your tax will be" + income*0.3);
        }



    }
}
